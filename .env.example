# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=heart_of_news

# API
PROJECT_NAME=Heart of News
SECRET_KEY=your-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
ENVIRONMENT=development
DEBUG=false

# Authentication
JWT_ALGORITHM=HS256
VERIFY_EMAIL=true
RESET_PASSWORD_TOKEN_EXPIRE_HOURS=4
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=15
FRONTEND_URL=http://localhost:3000

# Services
REDIS_HOST=localhost
REDIS_PORT=6379
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# S3 / Storage
STORAGE_BUCKET_NAME=heart-of-news-media

# Scraper
SCRAPER_USER_AGENT=HeartOfNewsBot/1.0
SCRAPER_REQUEST_DELAY=1.0

# Monitoring and Logging
LOG_LEVEL=INFO
HTTPX_LOG_LEVEL=WARNING
UVICORN_LOG_LEVEL=WARNING
SQLALCHEMY_LOG_LEVEL=WARNING
ENABLE_METRICS=true
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc
SENTRY_DSN=
ENABLE_PERFORMANCE_TRACKING=true
METRICS_EXPORT_INTERVAL=15

# APM Settings
ELASTIC_APM_SERVER_URL=
ELASTIC_APM_SERVICE_NAME=heart-of-news-backend
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Health checks
HEALTH_CHECK_INTERVAL=60