# Production Environment Configuration for Heart of News Backend

# Environment
ENVIRONMENT=production
DEBUG=false
PROJECT_NAME=Heart of News
VERSION=0.1.0

# API
API_V1_STR=/api/v1
SECRET_KEY=${PRODUCTION_SECRET_KEY}
CORS_ORIGINS=https://heartofnews.com,https://api.heartofnews.com,https://www.heartofnews.com

# Database
POSTGRES_SERVER=${PRODUCTION_DB_HOST}
POSTGRES_USER=${PRODUCTION_DB_USER}
POSTGRES_PASSWORD=${PRODUCTION_DB_PASSWORD}
POSTGRES_DB=heart_of_news_production

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO_SQL=false
DB_LOG_CONNECTIONS=false

# Query performance settings
DB_SLOW_QUERY_THRESHOLD=0.1
DB_ENABLE_QUERY_PROFILING=true

# Redis
REDIS_HOST=${PRODUCTION_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${PRODUCTION_REDIS_PASSWORD}
REDIS_DB=0

# Caching settings
CACHE_ENABLED=true
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Elasticsearch
ELASTICSEARCH_HOST=${PRODUCTION_ES_HOST}
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=${PRODUCTION_ES_USERNAME}
ELASTICSEARCH_PASSWORD=${PRODUCTION_ES_PASSWORD}
ELASTICSEARCH_USE_SSL=true

# Authentication
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080
VERIFY_EMAIL=true
RESET_PASSWORD_TOKEN_EXPIRE_HOURS=4
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_DURATION_MINUTES=15
FRONTEND_URL=https://heartofnews.com

# S3 / Storage
STORAGE_BUCKET_NAME=heart-of-news-production-media
AWS_ACCESS_KEY_ID=${PRODUCTION_AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${PRODUCTION_AWS_SECRET_KEY}
AWS_REGION=us-east-1
AWS_S3_ENDPOINT=${PRODUCTION_S3_ENDPOINT}

# Scraper settings
SCRAPER_USER_AGENT=HeartOfNewsBot/1.0
SCRAPER_REQUEST_DELAY=1.0

# Monitoring and Logging
LOG_LEVEL=INFO
HTTPX_LOG_LEVEL=WARNING
UVICORN_LOG_LEVEL=WARNING
SQLALCHEMY_LOG_LEVEL=WARNING
ENABLE_METRICS=true
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc
SENTRY_DSN=${PRODUCTION_SENTRY_DSN}
ENABLE_PERFORMANCE_TRACKING=true
METRICS_EXPORT_INTERVAL=15

# Application Performance Monitoring
ELASTIC_APM_SERVER_URL=${PRODUCTION_APM_URL}
ELASTIC_APM_SERVICE_NAME=heart-of-news-backend
DATADOG_API_KEY=${PRODUCTION_DATADOG_API_KEY}
DATADOG_APP_KEY=${PRODUCTION_DATADOG_APP_KEY}

# Health checks
HEALTH_CHECK_INTERVAL=60

# Email configuration
SMTP_HOST=${PRODUCTION_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${PRODUCTION_SMTP_USER}
SMTP_PASSWORD=${PRODUCTION_SMTP_PASSWORD}
EMAILS_FROM_EMAIL=news@heartofnews.com
EMAILS_FROM_NAME=Heart of News

# Social media publishing
TELEGRAM_BOT_TOKEN=${PRODUCTION_TELEGRAM_TOKEN}
TELEGRAM_CHANNEL_ID=${PRODUCTION_TELEGRAM_CHANNEL}
TWITTER_API_KEY=${PRODUCTION_TWITTER_API_KEY}
TWITTER_API_SECRET=${PRODUCTION_TWITTER_API_SECRET}
TWITTER_ACCESS_TOKEN=${PRODUCTION_TWITTER_ACCESS_TOKEN}
TWITTER_ACCESS_SECRET=${PRODUCTION_TWITTER_ACCESS_SECRET}
FACEBOOK_PAGE_ID=${PRODUCTION_FACEBOOK_PAGE_ID}
FACEBOOK_ACCESS_TOKEN=${PRODUCTION_FACEBOOK_ACCESS_TOKEN}
VK_API_TOKEN=${PRODUCTION_VK_API_TOKEN}
VK_GROUP_ID=${PRODUCTION_VK_GROUP_ID}

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=300
RATE_LIMIT_AUTHENTICATED=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Security settings
SECURITY_HEADERS_ENABLED=true
SECURITY_CONTENT_SECURITY_POLICY="default-src 'self'; img-src 'self' data: https:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' https:;"

# Kubernetes/Container settings
K8S_NODE_NAME=${K8S_NODE_NAME}
K8S_POD_NAME=${K8S_POD_NAME}
K8S_POD_NAMESPACE=${K8S_POD_NAMESPACE}